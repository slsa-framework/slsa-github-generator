{
  "scripts": {
    "format-yaml": "prettier --write '**/*.yml'  '**/*.yaml'",
    "format-yaml-check": "prettier --check  '**/*.yml'  '**/*.yaml'",
    "markdownlint": "markdownlint --dot .",
    "markdownlint-fix": "markdownlint --dot --fix .",
    "markdown-toc": "markdown-toc --bullets='-' -i",
    "renovate-config-validator": "renovate-config-validator --strict"
  },
  "devDependencies": {
    "@sigstore/cli": "0.8.1",
    "markdown-toc": "1.2.0",
    "markdownlint-cli": "0.44.0",
    "prettier": "3.5.1",
    "renovate": "39.174.3",
    "sigstore": "2.3.1"
  }
}
