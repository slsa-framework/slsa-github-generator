{
  "name": "detect-workflow-js",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action to detect the referenced reusable workflow.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --external encoding --source-map",
    "lint": "eslint --max-warnings 0 src/**/*.ts",
    "test": "jest",
    "all": "npm run format && npm run lint && npm run build && npm run test && npm run package"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "devDependencies": {
    "@types/jest": "29.5.8",
    "@types/node": "18.18.9",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.53.0",
    "eslint-plugin-github": "4.10.1",
    "eslint-plugin-prettier": "5.0.1",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "5.1.1"
  }
}
