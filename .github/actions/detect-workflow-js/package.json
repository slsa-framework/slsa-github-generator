{
  "name": "detect-workflow-js",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action to detect the referenced reusable workflow.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --external encoding --source-map",
    "lint": "eslint --max-warnings 0 src/**/*.ts",
    "test": "jest",
    "all": "npm run format && npm run lint && npm run build && npm run test && npm run package"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "20.19.24",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vercel/ncc": "0.38.4",
    "eslint": "8.57.1",
    "eslint-plugin-github": "4.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.0"
  }
}
